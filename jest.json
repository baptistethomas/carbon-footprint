{
  "moduleFileExtensions": ["js", "json", "ts"],
  "roots": ["<rootDir>/src"],
  "coveragePathIgnorePatterns": [
    "seed-*",
    "/node_modules/",
    "/dist/",
    "/.vscode/",
    "/.git/",
    "/coverage/",
    "/src/main.ts"
  ],
  "verbose": true,
  "testTimeout": 30000,
  "testRegex": ".test.ts",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}